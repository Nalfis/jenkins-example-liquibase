pipeline {
    agent {
        kubernetes {
            yaml '''
              apiVersion: v1
              kind: Pod
              spec:
                containers:
                - name: 'liquibase'
                  image: liquibase/liquibase:latest-alpine
                  command:
                  - cat
                  tty: true
            '''
        }
    }
    stages {
        stage('Test'){
            steps {
                container('liquibase'){
                    echo "Test Version"
                    sh 'echo "liquibase --version"'
                    echo 'Test Version Completed'
                }
            }
        }
    }
}
